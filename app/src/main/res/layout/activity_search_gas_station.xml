<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    tools:context=".SearchGasStation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/textLocation"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="153dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/cardviewedittext"
            android:drawableLeft="@drawable/app_src_main_res_drawable_ic_baseline_search_24"
            android:drawablePadding="8dp"
            android:hint="Search Loaction Here...."
            android:paddingLeft="20dp"
            android:textColorHighlight="@color/black"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btnSearchLocation"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/purple_200"
            android:text="Search"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/app_src_main_res_drawable_ic_baseline_search_24"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </RelativeLayout>


    <ListView
        android:id="@+id/btnlistView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>


</LinearLayout>